<h1>Genres</h1>
<% if user_signed_in? %>
  <p> <%= link_to 'New Genre', new_genre_path %></p>
<% end %>
<Table>
  <th>Name</th>
  <% if user_signed_in? %>
    <th>Actions</th>
  <% end %>
  <% @genres.each do |genre| %>
    <tr>
      <td><%=genre.name%></td>
      <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_genre_path(genre) %> | <%= link_to 'Delete', genre_path(genre), method: :delete, data: {confirm: "Are you sure?"} %></td>
      <% end %>
    </tr>
  <% end %>
</Table>
